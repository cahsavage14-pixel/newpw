# Nome do executável final
TARGET = main

# Compilador
CXX = g++

# Flags de compilação
CXXFLAGS = -Wall -O2

# Arquivos fonte
SRCS = main.cpp

# Arquivos objeto (gerados automaticamente a partir dos .cpp)
OBJS = $(SRCS:.cpp=.o)

# Regra padrão: compilar tudo
all: $(TARGET)

# Como gerar o executável
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS)

# Como compilar cada .cpp para .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Limpeza de arquivos temporários
clean:
	rm -f $(OBJS) $(TARGET)

# Opcionais:
# make dev → compila com a flag BOLA_DEVBUILD
dev:
	$(CXX) $(CXXFLAGS) -DBOLA_DEVBUILD -o $(TARGET) $(SRCS)
